<Window x:Class="WelcomeToCalgary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WelcomeToCalgary"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="600">
    <StackPanel>
        <Grid x:Name="HeaderGrid" Height="80">
            <Button x:Name="buttPoI" Content="Places of&#xA;Interest" HorizontalAlignment="Left" Height="50" Margin="10,20,0,0" VerticalAlignment="Top" Width="100" Click="buttPoI_Click" FontSize="16" IsEnabled="False"/>
            <Button x:Name="buttCalInfo" Content="Info about&#xA;Calgary" HorizontalAlignment="Left" Height="50" Margin="115,20,0,0" VerticalAlignment="Top" Width="100" Click="buttCalInfo_Click" FontSize="16" IsEnabled="False"/>
            <Button x:Name="buttEvents" Content="Socializing&#xA;and Events" HorizontalAlignment="Left" Height="50" Margin="220,20,0,0" VerticalAlignment="Top" Width="100" Click="buttEvents_Click" FontSize="16"/>
            <Button x:Name="buttLinks" Content="Useful&#xA;Links" HorizontalAlignment="Left" Height="50" Margin="325,20,0,0" VerticalAlignment="Top" Width="100" Click="buttLinks_Click" FontSize="16" IsEnabled="False"/>
            <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="1" Margin="0,79,0,0" Stroke="Black" VerticalAlignment="Top" Width="600"/>
            <Button Name="buttHome" Content="Home" HorizontalAlignment="Left" Margin="473,29,0,0" VerticalAlignment="Top" Width="79" Click="buttHome_Click" Height="29" />
        </Grid>

        <ScrollViewer x:Name="MainViewer" Height="680">
            <StackPanel x:Name="MainScroll">
                <Grid x:Name="HomepageGrid" Height="680">
                    <Image HorizontalAlignment="Left" Margin="-56,-88,-238,463" Width="869" Source="12062659_10209205325558339_513850230_o.jpg"/>
                    <Rectangle HorizontalAlignment="Center" Width="239" Margin="168,151,168,395" Fill="Black"/>
                    <Rectangle HorizontalAlignment="Center" Width="220" Height="120" Margin="168,151,168,395" Fill="White"/>
                    <Image x:Name="calgaryLogo" HorizontalAlignment="Center" Height="103" Margin="0,166,0,0" VerticalAlignment="Top" Width="214" Source="chnw_186_large4presentations.jpg"/>
                    <Rectangle HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="475,580,0,0">
                    	<Rectangle.Fill>
                    		<RadialGradientBrush>
                    			<GradientStop Color="Black" Offset="0"/>
                    			<GradientStop Color="White" Offset="1"/>
                    		</RadialGradientBrush>
                    	</Rectangle.Fill>
                    </Rectangle>
                    <Rectangle HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="465,580,0,0">
                    	<Rectangle.Fill>
                    		<RadialGradientBrush>
                    			<GradientStop Color="Black" Offset="0"/>
                    			<GradientStop Color="White" Offset="1"/>
                    		</RadialGradientBrush>
                    	</Rectangle.Fill>
                    </Rectangle>
                    <Rectangle HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="446.513,580,0,0">
                    	<Rectangle.Fill>
                    		<RadialGradientBrush>
                    			<GradientStop Color="Black" Offset="0"/>
                    			<GradientStop Color="White" Offset="1"/>
                    		</RadialGradientBrush>
                    	</Rectangle.Fill>
                    </Rectangle>
                    <Rectangle HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="433.457,580,0,0">
                    	<Rectangle.Fill>
                    		<RadialGradientBrush>
                    			<GradientStop Color="Black" Offset="0"/>
                    			<GradientStop Color="White" Offset="1"/>
                    		</RadialGradientBrush>
                    	</Rectangle.Fill>
                    </Rectangle>
                    <Rectangle HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="419.214,580,0,0">
                    	<Rectangle.Fill>
                    		<RadialGradientBrush>
                    			<GradientStop Color="Black" Offset="0"/>
                    			<GradientStop Color="White" Offset="1"/>
                    		</RadialGradientBrush>
                    	</Rectangle.Fill>
                    </Rectangle>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</Window>
